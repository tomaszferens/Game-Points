{
    "buildOnSave": false,
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": ".",
        "allowJs": true,
        "target": "ES5",
        "module": "commonjs",
        "inlineSourceMap": true,
        "sourceMap": false,
        "removeComments": false,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "suppressImplicitAnyIndexErrors": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strict": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "esnext",
            "dom"
        ],
        "jsx": "react"
    },
    "exclude": [
        "node_modules",
        "tslint",
        "dist"
    ],
    "types": [
        "reflect-metadata"
    ]
}